{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "react-native",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@atoms": ["atoms"],
      "@components": ["components"],
      "@navigators": ["navigators"],
      "@screens": ["screens"],
      "@styles": ["styles"],
      "@assets": ["assets"],
      "@configs": ["configs"],
      "@utils": ["utils"],
      "@APIs": ["APIs"],
      "@reducers": ["reducers"],
      "@atoms/*": ["atoms/*"],
      "@components/*": ["components/*"],
      "@navigators/*": ["navigators/*"],
      "@screens/*": ["screens/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@configs/*": ["configs/*"],
      "@utils/*": ["utils/*"],
      "@APIs/*": ["APIs/*"],
      "@reducers/*": ["reducers/*"]
    }
  },
  "exclude": ["__tests__", "node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
